<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tv_seq"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_66_66_66"
        android:textSize="@dimen/header_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_seq"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true"
        fresco:placeholderImage="@drawable/ic_launcher_background"
        fresco:roundedCornerRadius="5dp" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/color_0_0_0"
        android:textSize="@dimen/header_2"
        app:layout_constraintBottom_toTopOf="@+id/tv_sub_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sd_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/tv_sub_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/color_33_33_33"
        android:textSize="@dimen/body_2"
        app:layout_constraintBottom_toTopOf="@+id/iv_star_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sd_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_label" />

    <!--    <TextView-->
    <!--        android:id="@+id/tv_rating"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="8dp"-->
    <!--        android:textColor="@color/color_33_33_33"-->
    <!--        android:textSize="@dimen/body_3"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintStart_toEndOf="@+id/sd_icon"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/tv_sub_label" />-->

    <ImageView
        android:id="@+id/iv_star_0"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_holo_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sd_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_label" />

    <ImageView
        android:id="@+id/iv_star_1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_holo_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_star_0"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_label" />

    <ImageView
        android:id="@+id/iv_star_2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_holo_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_star_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_label" />

    <ImageView
        android:id="@+id/iv_star_3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_holo_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_star_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_label" />

    <ImageView
        android:id="@+id/iv_star_4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_holo_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_star_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_label" />

    <TextView
        android:id="@+id/tv_review_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_33_33_33"
        android:textSize="@dimen/body_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_star_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_label" />


</androidx.constraintlayout.widget.ConstraintLayout>